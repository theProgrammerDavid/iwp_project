<style>
    .left-column {
        position: absolute;
        left: 0px;
        
    }

    .right-column {
        position: absolute;
        right: 0px;
        margin-right: 40rem;
    }
</style>

<div class="left-column">
    <div class="login-page">
        <div class="form">
            <h2>New Question</h2>
            <h3><span class="error-test">{{msg}}</span></h3>
            <form action="/admin/add/question" method="post" class="login-form">
              
                <div class="container">

                    <input type="text" placeholder="Question" name="question" required>
                    <input type="text" placeholder="Option 1" name="option1" required>
                    <input type="text" placeholder="Option 2" name="option2" required>
                    <input type="text" placeholder="Option 3" name="option3" required>
                    <input type="text" placeholder="Option 4" name="option4" required>
                    <input type="text" placeholder="Correct Answer (eg. A)" name="correctAnswer" required>
                    <input type="text" placeholder="Test ID" name="testid" required>
                    <button type="submit" id="loginButton">ADD</button>

                </div>
                <br>

            </form>
        </div>
    </div>

</div>


<div class="right-column">
    <div class="login-page">
    <div class="form">
        <h2>New User</h2>
        <h3><span class="error-test">{{msg}}</span></h3>
        <form action="/admin/add/user" method="post" class="login-form">
           
            <div class="container">

                <input type="text" placeholder="Name" name="name" autofocus required>
                <input type="number" placeholder="Phone Number" name="phoneNumber" required>
                <input type="email" placeholder="Email address" name="email" required>

                <input type="password" placeholder="Password" name="password" required>
                <input type="password" placeholder="Confirm Password" name="confirm_password" required>
                <button type="submit" id="loginButton">ADD</button>

            </div>
            <br>

        </form>
    </div>
</div>

</div>